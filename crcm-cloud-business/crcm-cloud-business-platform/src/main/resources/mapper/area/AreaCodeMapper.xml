<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zsgf.platform.mapper.area.AreaCodeMapper">

    <resultMap type="com.zsgf.platform.model.entity.area.AreaCode" id="AreaCodeResult">
        <result property="id" column="ID"/>
        <result property="code" column="CODE"/>
        <result property="pcode" column="PCODE"/>
        <result property="name" column="NAME"/>
        <result property="lev" column="LEV"/>
        <result property="islast" column="ISLAST"/>
        <result property="businessCode" column="BUSINESS_CODE"/>
    </resultMap>

    <sql id="selectAreaCodeVo">
        select ID, CODE, PCODE, NAME, LEV, ISLAST, BUSINESS_CODE
        from pp_area_code
    </sql>

    <select id="findAreaCodeList" resultType="com.zsgf.platform.vo.AreaCodeVo">
        select CODE, NAME, BUSINESS_CODE
        from pp_area_code
        <where>
            <if test="@org.apache.commons.lang3.StringUtils@isNotBlank(lev)">
                and LEV = #{lev}
            </if>
            <if test="@org.apache.commons.lang3.StringUtils@isNotBlank(pcode)">
                and PCODE = #{pcode}
            </if>
            <if test="@org.apache.commons.lang3.StringUtils@isNotBlank(islast)">
                and ISLAST = #{islast}
            </if>
        </where>
    </select>

</mapper>