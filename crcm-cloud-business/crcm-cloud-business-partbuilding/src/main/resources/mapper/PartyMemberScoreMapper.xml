<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sjz.partbuilding.mapper.PartyMemberScoreMapper">

        <!-- 通用查询映射结果 -->
        <resultMap id="BaseResultMap" type="com.sjz.partbuilding.model.entity.PartyMemberScore">
                    <id column="id" property="id"/>
                <result column="deleted" property="deleted"/>
                <result column="create_by" property="createBy"/>
                <result column="create_time" property="createTime"/>
                <result column="update_by" property="updateBy"/>
                <result column="update_time" property="updateTime"/>
                    <result column="name" property="name"/>
                    <result column="user_id" property="userId"/>
                    <result column="score_type" property="scoreType"/>
                    <result column="reason" property="reason"/>
                    <result column="score" property="score"/>
                    <result column="target_id" property="targetId"/>
                    <result column="target_name" property="targetName"/>
                    <result column="remark" property="remark"/>
                    <result column="attachment" property="attachment"/>
        </resultMap>

        <!-- 通用查询结果列 -->
        <sql id="Base_Column_List">
                deleted,
                create_by,
                create_time,
                update_by,
                update_time,
            id, name, user_id, score_type, reason, score, target_id, target_name, remark, attachment
        </sql>


    <delete id="realDelete">
        DELETE FROM dj_party_member_score WHERE id = #{id}
    </delete>
    <select id="findScorePage" resultType="com.sjz.partbuilding.model.vo.PartyScoreVo">
        select t.*,@rownum := @rownum + 1 AS ranking from
        (SELECT @rownum := 0) r,(
        select user_id  ,SUM(if(score_type ='2',0-score ,score )) as score,name  from dj_party_member_score
        where deleted = 0
        <if test="t.name != null and t.name != '' ">
            and name like concat('%',#{t.name},'%')
        </if>
        GROUP  by user_id ,name ) t
        order by t.score desc
    </select>
</mapper>
